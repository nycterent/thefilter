# Newsletter Automation Bot Environment Configuration

# =============================================================================
# Secrets Management Configuration
# =============================================================================

# Set to true to use Infisical for secrets management
USE_INFISICAL=false

# =============================================================================
# Infisical Configuration (only needed if USE_INFISICAL=true)
# =============================================================================

# Your self-hosted Infisical instance URL (or use app.infisical.com)
INFISICAL_HOST=https://your-selfhosted-infisical.com
INFISICAL_PROJECT_ID=your-project-id
INFISICAL_ENVIRONMENT=dev
INFISICAL_SECRET_PATH=/

# Authentication Method 1: Universal Auth (recommended)
INFISICAL_CLIENT_ID=your-client-id
INFISICAL_CLIENT_SECRET=your-client-secret

# Authentication Method 2: Token-based (alternative to above)
# INFISICAL_TOKEN=your-auth-token

# =============================================================================
# Content Sources (or stored in Infisical)
# =============================================================================

# Readwise API key for highlights and notes
READWISE_API_KEY=your-readwise-token

# Glasp API key for web highlights
GLASP_API_KEY=your-glasp-token

# RSS feed URLs (comma-separated list)
RSS_FEEDS=https://feed1.com/rss,https://feed2.com/rss,https://feed3.com/rss

# =============================================================================
# Newsletter Platform (or stored in Infisical)
# =============================================================================

# Buttondown API key for newsletter publishing
BUTTONDOWN_API_KEY=your-buttondown-token

# =============================================================================
# AI Processing (or stored in Infisical)
# =============================================================================

# OpenRouter API key for AI processing
OPENROUTER_API_KEY=your-openrouter-key

# =============================================================================
# Image Search (or stored in Infisical)
# =============================================================================

# Unsplash API key for featured images
UNSPLASH_API_KEY=your-unsplash-access-key

# =============================================================================
# Application Settings
# =============================================================================

# Enable debug mode (shows detailed error messages)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO